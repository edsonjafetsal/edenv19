FROM  llx_holiday as h LEFT JOIN llx_user as u ON u.rowid = h.fk_user
LEFT JOIN llx_user as uu ON uu.rowid = h.fk_validator
LEFT JOIN llx_c_holiday_types as ch ON ch.rowid = h.fk_type
LEFT JOIN llx_holiday_users as hu ON hu.fk_user = h.fk_user AND hu.fk_type = 1
WHERE 1 = 1  
[AND (((h.date_fin BETWEEN {Date,RANGE1} AND DATE_ADD({Date,RANGE2}, INTERVAL '1' DAY ))AND ((h.date_debut &lt; h.date_fin)))]
[OR ((h.date_debut &lt; {Date,RANGE1} OR h.date_debut &lt; {Date,RANGE1})AND h.date_fin &gt; DATE_ADD({Date,RANGE2}, INTERVAL '1' DAY ))]
[OR((h.date_debut BETWEEN {Date,RANGE1} AND DATE_ADD({Date,RANGE2}, INTERVAL '1' DAY )) AND h.date_debut &lt; h.date_fin))]
