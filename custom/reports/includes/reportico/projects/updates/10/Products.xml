                <PageHeaders></PageHeaders>
                <PageFooters></PageFooters>
                <DisplayOrders>
                    <DisplayOrder>
                        <ColumnName>ref</ColumnName>
                        <OrderNumber>1</OrderNumber>
                    </DisplayOrder>
                    <DisplayOrder>
                        <ColumnName>description</ColumnName>
                        <OrderNumber>2</OrderNumber>
                    </DisplayOrder>
                    <DisplayOrder>
                        <ColumnName>base_imponible</ColumnName>
                        <OrderNumber>3</OrderNumber>
                    </DisplayOrder>
                    <DisplayOrder>
                        <ColumnName>IVA</ColumnName>
                        <OrderNumber>4</OrderNumber>
                    </DisplayOrder>
                    <DisplayOrder>
                        <ColumnName>PVP</ColumnName>
                        <OrderNumber>5</OrderNumber>
                    </DisplayOrder>
                    <DisplayOrder>
                        <ColumnName>fk_product_type</ColumnName>
                        <OrderNumber>6</OrderNumber>
                    </DisplayOrder>
                    <DisplayOrder>
                        <ColumnName>rowid</ColumnName>
                        <OrderNumber>7</OrderNumber>
                    </DisplayOrder>
                </DisplayOrders>
                <Groups></Groups>
                <Graphs></Graphs>
            </Output>
        </EntryForm>
    </ReportQuery>
