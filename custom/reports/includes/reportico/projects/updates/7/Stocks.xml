                <TableSql></TableSql>
                <WhereSql></WhereSql>
                <GroupSql></GroupSql>
                <RowSelection>all</RowSelection>
                <SQL>
                    <QuerySql></QuerySql>
                    <SQLRaw>SELECT p.ref ref, p.label descripcion, e.ref as almacen, w.reel stock, e.rowid rowid,
                        p.rowid prodid
                        FROM llx_product p
                        JOIN llx_product_stock w ON w.fk_product = p.rowid
                        JOIN llx_entrepot e ON w.fk_entrepot = e.rowid
                        WHERE 1 = 1 AND e.entity=1
                        ORDER BY p.ref ASC
                    </SQLRaw>
                </SQL>
                <QueryColumns>
