CASE (f.fk_statut) WHEN '0' THEN 'Draft' 
WHEN '1' THEN 'Unpaid'
WHEN '2' THEN 'PaidTotalPartial'
WHEN '3' THEN 'Abandoned'
END AS status 
,f.datef AS invoice_date, f.total_ttc AS invoice_total, pro.ref AS product, fde.description AS line_description, fde.subprice AS line_subprice, 
fde.qty AS line_qty, fde.total_ttc AS line_total, soc.nom AS third,
fun.toun AS unpaid_total, fap.topa AS paid_total
FROM  llxas_facture AS f
LEFT JOIN  llxas_facturedet AS fde ON f.rowid = fde.fk_facture 
LEFT JOIN llxas_societe AS soc ON  f.fk_soc = soc.rowid 
LEFT JOIN llxas_product AS pro ON pro.rowid = fde.fk_product 
LEFT JOIN faun AS fun  ON  fun.socun = f.fk_soc
LEFT JOIN fapa AS fap  ON  fap.socpa = f.fk_soc
WHERE 1 = 1  
ORDER BY f.fk_soc</SQLRaw></SQL><QueryColumns><QueryColumn><Name>fid</Name><TableName></TableName><ColumnName>f.rowid AS</ColumnName><ColumnType>char</ColumnType><ColumnLength>30</ColumnLength><Format><column_display>hide</column_display><content_type>plain</content_type><ColumnStartPDF></ColumnStartPDF><justify>left</justify><ColumnWidthPDF></ColumnWidthPDF><ColumnWidthHTML></ColumnWidthHTML><column_title></column_title><tooltip></tooltip><group_header_label>0</group_header_label><group_header_label_xpos></group_header_label_xpos><group_header_data_xpos></group_header_data_xpos><group_trailer_label>0</group_trailer_label></Format></QueryColumn><QueryColumn><Name>facture</Name><TableName></TableName><ColumnName>f.ref AS</ColumnName><ColumnType>char</ColumnType><ColumnLength>30</ColumnLength><Format><column_display>hide</column_display><content_type>plain</content_type><ColumnStartPDF></ColumnStartPDF><justify>left</justify><ColumnWidthPDF></ColumnWidthPDF><ColumnWidthHTML></ColumnWidthHTML><column_title>Invoice Ref</column_title><tooltip></tooltip><group_header_label>0</group_header_label><group_header_label_xpos></group_header_label_xpos><group_header_data_xpos></group_header_data_xpos><group_trailer_label>0</group_trailer_label></Format></QueryColumn><QueryColumn><Name>status</Name><TableName></TableName><ColumnName>CASE (f.fk_statut) WHEN '0' THEN 'Draft' 
