                <RowSelection>all</RowSelection>
                <SQL>
                    <QuerySql></QuerySql>
                    <SQLRaw>SELECT p.label label, SUM(if(type =2, fd.qty*-1,fd.qty)) qty, p.ref ref, p.fk_product_type
                        fk_product_type, sum(fd.total_ht) / SUM(if(type = 2, fd.qty * - 1, fd.qty)) as pricemed,
                        sum(fd.total_ht) total , p.rowid prodid
                        FROM llx_facture f
                        INNER JOIN
                        llx_facturedet fd ON fd.fk_facture = f.rowid
                        INNER JOIN
                        llx_product p ON fd.fk_product = p.rowid
                        WHERE 1 = 1 AND (f.fk_statut &gt;0 AND f.fk_statut &lt;3 OR f.close_code &lt;&gt; 'replaced')
                        AND f.entity=1 GROUP BY p.rowid, p.label, p.ref, p.fk_product_type
                        ORDER BY p.label ASC
                    </SQLRaw>
                </SQL>
